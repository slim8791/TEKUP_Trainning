<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TEKUP_Trainning.AddContact">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            
            <Entry x:Name="Name" Placeholder="Put the name"></Entry>
            <Entry x:Name="LastName" Placeholder="Put the LastName"></Entry>
            <Entry x:Name="Email" Placeholder="Put the Email" Keyboard="Email"></Entry>
            <Entry x:Name="Phone" Placeholder="Put the Phone" Keyboard="Telephone"></Entry>
            <Button Text="Add to db" Clicked="AddToDataBase"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>